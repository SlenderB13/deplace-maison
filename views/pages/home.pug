            a.home__footer__top__info__link CONTACT
          .home__footer__top__policy
            p.home__footer__top__policy__title POLICY
            a.home__footer__top__policy__link TERMS
            a.home__footer__top__policy__link PRIVACY
            a.home__footer__top__policy__link COOKIES
          .home__footer__top__back

        .home__footer__bottom
          .home__footer__bottom__newsletter
            input.home__footer__bottom__newsletter__input(type='email', placeholder='email address')
          .home__footer__bottom__credits
            a credits
